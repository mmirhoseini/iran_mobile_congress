<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutSlideshow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Gallery
        android:id="@+id/gallerySlideshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="-30dp" />

    <ImageView
        android:id="@+id/rightArrow"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_right" />

    <ImageView
        android:id="@+id/leftArrow"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_left" />

    <ImageView
        android:id="@+id/radioButton1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/radioButton3"
        android:layout_toLeftOf="@+id/radioButton2" />

    <ImageView
        android:id="@+id/radioButton2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/radioButton3"
        android:layout_toLeftOf="@+id/radioButton3" />

    <ImageView
        android:id="@+id/radioButton3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/gallerySlideshow"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/radioButton4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/radioButton3"
        android:layout_toRightOf="@+id/radioButton3" />

    <ImageView
        android:id="@+id/radioButton5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/radioButton3"
        android:layout_toRightOf="@+id/radioButton4" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gallerySlideshow"
        android:layout_below="@+id/gallerySlideshow"
        android:layout_marginTop="-80dp"
        android:background="#bfff"
        android:gravity="right"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="20dp" />

</RelativeLayout>